<Window x:Class="Parallel_Port_Controller.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parallel_Port_Controller"
        mc:Ignorable="d"
        Title="Password" Height="200" Width="350" Closing="Window_Closing">
    <StackPanel Background="#252525">
        <TextBlock Text="Please enter the passphrase:" Margin="30, 30, 30, 10" FontFamily="Segoe UI" FontSize="16" Foreground="White" />
        <PasswordBox Name="pwbox" Margin="35, 0" Background="#505050" BorderBrush="LimeGreen" Foreground="White" />
        <Button Content="Get Access" Margin="35, 15" BorderBrush="Lime" FontSize="14" Background="RoyalBlue" Foreground="Silver" Click="Button_Click" />
    </StackPanel>
</Window>
